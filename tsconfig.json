{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"],

  "compilerOptions": {
    "rootDirs": ["src", "server"],
    "baseUrl": ".",
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "build",
    "strict": true,
    "strictNullChecks": true
  }
}


datasource db {
  provider = "sqlite"
  url      = "file:./nextUp.db"
}

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native"]
}

model User {
  user_id        String @id @default(cuid())
  first_name     String
  last_name      String
  user_name      String @unique
  email          String @unique
  password       String
  goals          Goal[]
  habits         Habit[]
  journals       Journal[]
}

model Goal {
  goal_id       String @id @default(cuid())
  user_id       String
  title         String
  description   String?
  target_date   DateTime?
  status        Int
  user          User @relation(fields: [user_id], references: [user_id])
  habits        Habit[]
  journals      Journal[]
}

model Habit {
  habit_id              String @id @default(cuid())
  user_id               String
  goal_id               String?
  title                 String
  frequency_per_week    Float?
  description           String?
  start_date            DateTime @default(now())
  end_date              DateTime?
  status                Int
  user                  User @relation(fields: [user_id], references: [user_id])
  goal                  Goal? @relation(fields: [goal_id], references: [goal_id])
  item_reminder         ItemReminder[]
  habit_reflection      HabitReflection[]
  task                  Task[]
}

model ItemReminder{
  item_reminder_id     String @id @default(cuid())
  reminder_id          String
  habit_id             String
  task_id              String?
  habit                Habit @relation(fields: [habit_id], references: [habit_id])
  task                 Task? @relation(fields: [task_id], references: [task_id])
}
model Reminder {
  reminder_id        String @id @default(cuid())
  reminder_time      DateTime
} 

model HabitReflection {
  habit_reflection_id    String @id @default(cuid())
  habit_id               String
  description            String
  habit                  Habit @relation(fields: [habit_id], references: [habit_id])
}

model Journal {
  journal_id       String @id @default(cuid())
  user_id          String
  goal_id          String?
  title            String
  description      String
  date             DateTime? @default(now())
  user             User @relation(fields: [user_id], references: [user_id])
  goal             Goal? @relation(fields: [goal_id], references: [goal_id])
}

model Task {
  task_id           String @id @default(cuid())
  habit_id          String
  title             String
  description       String?
  status            Boolean
  priority          Int
  date              DateTime?
  habit             Habit @relation(fields: [habit_id], references: [habit_id])
  item_reminder     ItemReminder[]
}


